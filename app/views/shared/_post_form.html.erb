<!--POST BOX AND PHOTO SENDER USED IN OTHER CONTEXTS-->
<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>


<!--post text field-->

  <div class="field">
    <%= f.text_area :content, placeholder: "Share your pet story...", class:"post-form"%>
  </div>

<div>
  <table id="form_post_div">
  <tr>
    <td><span class="picture" id="pic-post" align="left">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span></td>
    <td><span class="post-btn">
      <%= f.submit "Post", class: "btn btn-primary" %>
      </span></td>
  </tr>
</table>




</div

<% end %>

<!--only pictures under 5MB are allowed-->
<script type="text/javascript">
  $('#post_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
