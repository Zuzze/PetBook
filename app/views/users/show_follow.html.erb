    <section class="user_info" align="center">
      <h1><%= @user.name %></h1>
      <%= gravatar_for @user %>
      <!--<span><%= link_to "view my profile", @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>-->
      <section id="following_page_stats">
        <%= render 'shared/stats' %>
        <!--<% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user, size: 30), user %>
            <% end %>
          </div>
        <% end %>-->
      </section>
    </section>
  </aside>


  <div class="col-md-8">
    <h3 align="center"><%=@title %></h3>
    <% if @users.any? %>
      <ul id="following_page_users_list" class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>

